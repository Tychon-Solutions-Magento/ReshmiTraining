<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!-- Track customer product views -->
    <table name="personalization_customer_views" resource="default" engine="innodb" comment="Customer Viewed Products">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" comment="Customer ID"/>
        <column xsi:type="varchar" name="session_id" nullable="true" length="255" comment="Session ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="varchar" name="category_ids" nullable="true" length="255" comment="Category IDs"/>
        <column xsi:type="timestamp" name="viewed_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Viewed At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>

