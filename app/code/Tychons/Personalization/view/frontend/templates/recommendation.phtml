        <div class="products-grid" style="display:flex; gap:20px; flex-wrap:wrap;">
            <?php foreach ($data['products'] as $product): ?>
                <div class="product-item" style="width:200px; text-align:center;">
                    <img src="<?= $block->getViewFileUrl('Magento_Catalog::images/product/placeholder/image.jpg') ?>"
                         alt="<?= $block->escapeHtml($product->getName()) ?>" style="width:100%;"/>
                    <p><?= $block->escapeHtml($product->getName()) ?></p>
                    <p><?= $product->getPrice() ?></p>
                </div>
            <?php endforeach; ?>
        </div>
