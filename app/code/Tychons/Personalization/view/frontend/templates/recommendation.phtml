<?php $data = $block->getRecommendations(); ?>
<?php if ($data && $data['products']->count()): ?>
    <div class="personalization-banner" style="margin:20px; padding:20px; background:#f5f5f5; border-radius:8px;">
        <h2><?= $block->escapeHtml($data['banner']['banner_text'] ?? 'Recommended For You') ?></h2>
        <?php if (!empty($data['banner']['banner_image'])): ?>
            <img src="<?= $block->getViewFileUrl($data['banner']['banner_image']) ?>" alt="Banner"/>
